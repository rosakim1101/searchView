<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#fff"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:backgroundTint="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/imageView"
            android:layout_marginTop="34.8dp"
            android:layout_marginLeft="31.5dp"
            android:layout_marginRight="33.3dp"
            android:layout_width="203.8dp"
            android:layout_height="113dp"
            app:srcCompat="@color/colorAccent" />

        <EditText
            android:id="@+id/person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="42.3dp"
            android:layout_marginRight="43.8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:drawableLeft="@drawable/person_24_px"/>

        <EditText
            android:id="@+id/call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42.3dp"
            android:layout_marginRight="43.8dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/person"
            android:drawableLeft="@drawable/call_24_px"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42.3dp"
            android:layout_marginRight="43.8dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/call"
            android:drawableLeft="@drawable/email_24_px"/>

        <EditText
            android:id="@+id/business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42.3dp"
            android:layout_marginRight="43.8dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/email"
            android:drawableLeft="@drawable/business_24_px"/>

        <Button
            android:id="@+id/done"
            android:layout_width="70.5dp"
            android:layout_height="wrap_content"
            android:height="25dp"
            android:text="완료"
            android:textSize="13.8sp"
            app:layout_constraintTop_toBottomOf="@id/business"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="49.8dp"
            android:layout_marginTop="7.5dp"
            />

        <Button
            android:id="@+id/add"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:height="25dp"
            android:text="추가하기"
            android:textSize="13.8sp"
            app:layout_constraintTop_toBottomOf="@+id/business"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="53.3dp"
            android:layout_marginTop="7.5dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>